# ─── Django Core ───────────────────────────────────────────────────────────────
DEBUG=True
SECRET_KEY=your-secret-key-here-replace-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ─── Database ──────────────────────────────────────────────────────────────────
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://recruitflow_user:yourpassword@localhost:5432/recruitflow_db

# ─── Anthropic (Claude AI) ─────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ─── ElevenLabs (Text-to-Speech) ───────────────────────────────────────────────
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=your-elevenlabs-voice-id-here

# ─── Whapi (WhatsApp Messaging) ────────────────────────────────────────────────
WHAPI_API_KEY=your-whapi-api-key-here
WHAPI_BASE_URL=https://gate.whapi.cloud

# ─── Gmail API (OAuth2) ────────────────────────────────────────────────────────
GMAIL_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-google-client-secret
GMAIL_REDIRECT_URI=http://localhost:8000/oauth2callback
# Path to your downloaded credentials.json from Google Cloud Console
GMAIL_CREDENTIALS_FILE=credentials.json
# Path where the token will be stored after first OAuth flow
GMAIL_TOKEN_FILE=token.json

# ─── APScheduler ───────────────────────────────────────────────────────────────
APSCHEDULER_RUN_NOW_TIMEOUT=25
