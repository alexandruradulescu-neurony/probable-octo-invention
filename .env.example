# ─── Django Core ───────────────────────────────────────────────────────────────
DEBUG=True
SECRET_KEY=your-secret-key-here-replace-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-subdomain.ngrok.app
PORT=8010
CSRF_TRUSTED_ORIGINS=http://localhost:8010,https://your-subdomain.ngrok.app
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
LOG_LEVEL=INFO

# ─── Database ──────────────────────────────────────────────────────────────────
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://recruitflow_user:yourpassword@localhost:5432/recruitflow_db
# Seconds a DB connection is kept alive between requests (0 = close after each request)
CONN_MAX_AGE=60

# ────────────────────────────────────────────
# ANTHROPIC (Claude)
# ────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-6
ANTHROPIC_FAST_MODEL=claude-haiku-4-5
ANTHROPIC_MAX_TOKENS=4096

# ────────────────────────────────────────────
# ELEVENLABS
# https://elevenlabs.io
# Single agent shared across all positions.
# System prompt + first message injected dynamically per call from Position model.
# ────────────────────────────────────────────
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_AGENT_ID=your-elevenlabs-agent-id-here
ELEVENLABS_PHONE_NUMBER_ID=your-elevenlabs-phone-number-id-here
ELEVENLABS_WEBHOOK_SECRET=your-elevenlabs-webhook-secret-here

# ────────────────────────────────────────────
# WHAPI (WhatsApp)
# https://whapi.cloud
# ────────────────────────────────────────────
WHAPI_TOKEN=your-whapi-token-here
WHAPI_API_URL=https://gate.whapi.cloud
# Optional: set to the token configured in Whapi Dashboard → Channel → Webhooks → Token
# Inbound webhooks are accepted without validation in DEBUG mode if this is left empty.
WHAPI_WEBHOOK_SECRET=

# ────────────────────────────────────────────
# GMAIL API (outbound email + CV inbox polling)
# https://console.cloud.google.com
# Run one-time OAuth2 flow locally to generate REFRESH_TOKEN
# ────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token
# Must match the Authorised Redirect URI registered in Google Cloud Console.
# Local dev:  http://localhost:8010/settings/gmail/callback/
# Production: https://yourdomain.com/settings/gmail/callback/
GOOGLE_REDIRECT_URI=http://localhost:8010/settings/gmail/callback/
GMAIL_INBOX_LABEL=CVs
GMAIL_PROCESSED_LABEL=CVs-Processed
GMAIL_POLL_ENABLED=True
GMAIL_POLL_MINUTES=15

# ────────────────────────────────────────────
# STORAGE
# Local filesystem only.
# ────────────────────────────────────────────
MEDIA_ROOT=media/

# ────────────────────────────────────────────
# SCHEDULER
# ────────────────────────────────────────────
TIME_ZONE=Europe/Bucharest
APSCHEDULER_TIMEZONE=Europe/Bucharest
